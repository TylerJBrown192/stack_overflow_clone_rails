<%= render 'shared/header', title: "Sign up" %>

<%= bootstrap_form_for(@user) do |f| %>
  <%=f.text_field :user_name, placeholder: 'User Name' %>
  <%=f.text_field :email, placeholder: 'E-mail'  %>
  <%=f.password_field :password, placeholder: 'Password'  %>
  <%=f.password_field :password_confirmation, placeholder: 'Retype Password'  %>
  <%=f.submit "Sign Up Now" %>
<%end%>
